<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarvelCharacterApp"
        tools:targetApi="31">
        <activity
            android:name=".WebViewActivity"
            android:exported="false"
            android:label="@string/title_activity_web_view"
            android:theme="@style/Theme.MarvelCharacterApp" />
        <activity
            android:name=".ComicDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_comic_detail"
            android:theme="@style/Theme.MarvelCharacterApp" />
        <activity
            android:name=".ComicsDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_comics_detail"
            android:theme="@style/Theme.MarvelCharacterApp" />
        <activity
            android:name=".FavoriteCharacterActivity"
            android:exported="false"
            android:label="@string/title_activity_favorite_character"
            android:theme="@style/Theme.MarvelCharacterApp" />
        <activity
            android:name=".CharacterDetailActivity"
            android:exported="false"
            android:label="@string/title_activity_character_detail"
            android:theme="@style/Theme.MarvelCharacterApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MarvelCharacterApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>